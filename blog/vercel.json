{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python@3.9" }
  ],
  "routes": [
    { "src": "^/static/(.*)$", "dest": "/static/$1", "headers": { "cache-control": "public, max-age=31536000, immutable" } },
    { "src": "^/media/(.*)$", "dest": "/media/$1" },
    { "src": "^(?!/static/|/media/).*", "dest": "api/index.py" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "config.settings",
    "PYTHONUNBUFFERED": "1"
  }
}